<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

<servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>com.docudigitalsds.controller.LoginController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>com.docudigitalsds.controller.AdminController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/AdminController</url-pattern>
</servlet-mapping>


<servlet>
    <servlet-name>HelloController</servlet-name>
    <servlet-class>com.docudigitalsds.controller.HelloController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>HelloController</servlet-name>
    <url-pattern>/hello</url-pattern>
</servlet-mapping>

  <welcome-file-list>
      <welcome-file>view/welcome.html</welcome-file>
  </welcome-file-list>
  
</web-app>